---
import "../styles/globals.css";

interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="bg-white text-black antialiased smooth-scroll font-inter dark:bg-black dark:text-white selection:bg-blue-600 selection:text-white"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="canonical" href={canonicalURL} />
    <link
      rel="preload"
      href="/fonts/inter-var-upright.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/inter-var-italic.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
