---
import "../styles/globals.css";
import Head from "../components/head.astro";

const { title, description } = Astro.props;
---

<html lang="en" class="smooth-scroll bg-white text-black antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <Head title={title} description={description} />
    <link
      rel="preload"
      href="/fonts/ibm-plex-sans-var-upright.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/ibm-plex-sans-var-italic.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>
  <body>
    <slot />
  </body>
</html>
